datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String     @id
  country      String
  display_name String
  email        String
  external_url String
  followers    Int
  href         String
  images       String[]
  product      String
  type         String
  uri          String
  playlists    Playlist[]
  accessToken  String
  refreshToken String
  expires_in   Int
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@map("users")
}

model Playlist {
  id              String   @id
  collaborative   Boolean
  description     String
  external_url    String
  followers       Int
  href            String
  name            String
  owner           User     @relation(fields: [userId], references: [id])
  userId          String
  public          Boolean
  snapshot_id     String
  tracks          String[]
  uri             String
  active          Boolean
  allowed_userIds String[]
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("playlists")
}
